<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Todo Security Groups -->
        <record id="group_todo_user" model="res.groups">
            <field name="name">Todo: User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_todo_manager" model="res.groups">
            <field name="name">Todo: Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_todo_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="todo_task_rule_user" model="ir.rule">
            <field name="name">Todo Task: User sees own and shared tasks</field>
            <field name="model_id" ref="model_todo_task"/>
            <field name="groups" eval="[(4, ref('group_todo_user'))]"/>
            <field name="domain_force">['|', ('participant_ids', 'in', user.id), ('create_uid', '=', user.id)]</field>
        </record>

        <record id="todo_task_rule_manager" model="ir.rule">
            <field name="name">Todo Task: Manager sees all tasks</field>
            <field name="model_id" ref="model_todo_task"/>
            <field name="groups" eval="[(4, ref('group_todo_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>